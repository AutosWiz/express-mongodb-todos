<%- include('../partials/header') %>
<div class="row">
  <div class="col-6 offset-3">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Add Todo</h5>
        <form action="/todos" method="POST" class="row g-3 needs-validation" novalidate>
          <div class="col-12">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="todo[title]" required />
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
          <div class="col-12">
            <button class="btn btn-primary" type="submit">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>
